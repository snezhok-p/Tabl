<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/gradientStart2"
                android:endColor="@color/gradientEnd2"
                />
            <corners
                android:radius="5dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/gradientStart"
                android:endColor="@color/gradientEnd"
                />

            <corners
                android:radius="5dp"/>

        </shape>
    </item>
</selector>